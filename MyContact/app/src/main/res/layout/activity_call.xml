<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CallActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="-16dp"
    android:background="@color/colorGray">
    <ImageView
        android:layout_width="@dimen/dp_100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_50dp"
        android:src="@drawable/girl" />
    <TextView
        android:layout_width="@dimen/dp_100dp"
        android:layout_height="@dimen/dp_50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Nhii"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp_30dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <Button
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:drawableTop="@drawable/muted"
            android:text="Tắt âm">
        </Button>
        <Button
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:drawableTop="@drawable/dung"
            android:text="Giữ"></Button>
        <Button
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:drawableTop="@drawable/aa"
            android:text="Loa ngoài">
        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <Button
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:drawableTop="@drawable/icon"
            android:gravity="center"
            android:text="Thêm"></Button>
        <Button
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:drawableTop="@drawable/banphim"
            android:gravity="center"
            android:text="Bàn phím"></Button>
        <Button
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:drawableTop="@drawable/ghiam"
            android:gravity="center"
            android:text="Ghi âm"></Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"></LinearLayout>

    <Button
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:drawableTop="@drawable/call"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_100dp"></Button>
</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>